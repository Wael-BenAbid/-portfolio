# ===========================================
# Portfolio Project Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# Django Settings
# ===========================================
# Generate a secure secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-super-secret-key-change-this-in-production
DJANGO_DEBUG=False

# ===========================================
# Database Settings
# ===========================================
POSTGRES_DB=portfolio
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-database-password
DB_HOST=db
DB_PORT=5432

# ===========================================
# CORS Settings (comma-separated origins)
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com

# ===========================================
# Email Settings (for notifications)
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# ===========================================
# Frontend Settings
# ===========================================
VITE_API_URL=http://localhost:8000

# ===========================================
# Optional: Social Auth (if implemented)
# ===========================================
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# FACEBOOK_APP_ID=your-facebook-app-id
# FACEBOOK_APP_SECRET=your-facebook-app-secret
